---
import FlipCard from "../Card/FlipCard/FlipCard";
import { TypeOfProjectsEnum } from "../Card/FlipCard/TypeOfProjects";
import GlitchText from "../Glitch/GlitchText.astro";
const { id } = Astro.props;
---

<div class="grid grid-flow-row pt-20 lg m-auto h-screen w-screen">
    <div class="font-bold absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
    S<br />C<br />R<br />O<br />L<br />L
    </div>
    <!-- <GlitchText textToShow="S\nC<br />R" class="font-bold absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2" id="projectPageScrollGlitch" /> -->
    <div class="w-full h-contain flex justify-center items-start">
        <div>
        <h2 class="page-title">Featured<br />Projects</h2>
        <span>(Hover over the cards)</span>
        </div>
    </div>
    <div
        id="project-container"
        class="flex justify-around items-center flex-wrap px-10 overflow-y-scroll"
    >
        <FlipCard
            passedId={`${id}-Flipcard-A`}
            typeOfProject={TypeOfProjectsEnum.ANARCHY_CHESS}
            client:only="react"
        >
            <h2 class="card__title text-2xl font-bold">
                ANARCHY <br /> CHESS
            </h2>
        </FlipCard>
        <FlipCard
            passedId={`${id}-Flipcard-B`}
            typeOfProject={TypeOfProjectsEnum.FOUR_IN_A_ROW}
            client:only="react"
        >
            <h2 class="card__title text-2xl font-bold">
                CONNECT <br /> FOUR
            </h2>
        </FlipCard>
    </div>
</div>

<style lang="scss">
    .card__title {
        transform: translateZ(100px);
    }
</style>
